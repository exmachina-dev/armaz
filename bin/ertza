#!/usr/bin/env python3
# -*- coding: utf-8 -*-

if __name__ == "__main__":
    from ertza import Ertza

    import argparse
    parser = argparse.ArgumentParser(prog='ertza')
    parser.add_argument('--without-modbus', action='store_true',
            help='start ertza without the modbus backend')
    parser.add_argument('--loopback', action='store_true',
            help='only listen on loopback')
    parser.add_argument('--reverse-ports', action='store_true',
            help='reverse server and client ports')
    parser.add_argument('--direct-enslave', action='store_true',
            help='control slave drive directly')
    args = parser.parse_args()

    mi = Ertza(vars(args))
    mi.main_run()
